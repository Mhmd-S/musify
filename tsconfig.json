{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
		"baseUrl": "src",
		"paths": {
      "@components/*": ["components/*"],
      "@lib/*": ["lib/*"],
      "@assets/*": ["assets/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@services/*": ["services/*"],
      "@hooks/*": ["hooks/*"],
      "@context/*": ["context/*"],
      "@pages/*": ["pages/*"],
      "@layouts/*": ["layouts/*"],
      "@constants/*": ["constants/*"],
      "@types/*": ["types/*"],
      "@api/*": ["api/*"],
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@forms/*": ["forms/*"],
      "@request/*": ["request/*"],
      "@apps/*": ["apps/*"],
      "@routes/*": ["routes/*"],
		}
  },
  "include": ["./src", "./dist/types/**/*.ts", "./next-env.d.ts"],
  "exclude": ["./node_modules"],
}