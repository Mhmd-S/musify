{
	"compilerOptions": {
		"baseUrl": "src",
		"paths": {
			"@components/*": ["components/*"],
			"@assets/*": ["assets/*"],
			"@styles/*": ["styles/*"],
			"@utils/*": ["utils/*"],
			"@services/*": ["services/*"],
			"@hooks/*": ["hooks/*"],
			"@contexts/*": ["contexts/*"],
			"@pages/*": ["pages/*"],
			"@layouts/*": ["layouts/*"],
			"@constants/*": ["constants/*"],
			"@types/*": ["types/*"],
			"@api/*": ["api/*"],
			"@config/*": ["config/*"],
			"@modules/*": ["modules/*"],
			"@forms/*": ["forms/*"],
			"@request/*": ["request/*"],
			"@apps/*": ["apps/*"],
			"@routes/*": ["routes/*"]
		}
	},
	"exclude": ["node_modules", "dist"]
}